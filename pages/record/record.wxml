<wxs src="../../utils/util.wxs" module="util" />
<wxs module="mode">
var change = function (mode) {
if(mode=="free"){
return "自由"
}
return "未知"
}

module.exports = {
change : change 
}
</wxs>
<wxs module="status">
var change = function (status) {
if(status=="create"){
return "download"
}else if(status=="process"){
return "waiting"
}else if(status=="complete"){
return "success"
}

return "warn"
}

module.exports = {
change : change 
}
</wxs>
