@import "../../libs/icon/icon.wxss";
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
 
}



.weui-icon-search_in-box {
  color:black;
  position: absolute;
   font-size: 20px;
  font-weight:bold;
  left: 10px;
  top: 5px;
}
.weui-icon-search_in-box-right {
   color:black;
  position: absolute;
  font-weight:bold;
  font-size: 20px;
  right: 10px;
  top: 5px;
}


.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  height: 30px;
  background: #f5f5f5;
 
}

.weui-search-bar__box {
  position: relative;
  padding-left: 40px;
  padding-right: 40px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  color:#aaa;
  padding-left: 10px;
  padding-right: 10px;
  height: 30px;
  
  display: block;
  line-height: 30px;
  font-size: 13px;

}

/*总体主盒子*/  
.container {  
   padding:0;
    margin:0;
  

}  
  .nav{
  
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  }
/*左侧栏主盒子*/  
.nav_left{  
  /*设置行内块级元素（没使用定位）*/  
   flex:0 0 25%; 
  display: inline-block;  
  
   
  /*主盒子设置背景色为灰色*/  
  background: #f5f5f5;  
  text-align: center;  
}  
/*左侧栏list的item*/  
.nav_left .nav_left_items{  
  /*每个高30px*/  
 
  height: 30px;  
  /*垂直居中*/  
  line-height: 30px;  
  /*再设上下padding增加高度，总高42px*/  
  padding: 6px 0;  
  /*只设下边线*/  
  border-bottom: 1px solid #dedede;  
  /*文字14px*/  
  font-size: 14px;  
}  
/*左侧栏list的item被选中时*/  
.nav_left .nav_left_items.active{  
  /*背景色变成白色*/  
  background: #fff;  
}  
  
/*右侧栏主盒子*/  
.nav_right{  
  /*右侧盒子使用了绝对定位*/  

  flex:0 0 60%;  
  /*宽度75%，高度占满，并使用百分比布局*/  
  
  padding: 10px;  
  box-sizing: border-box;  
  background: #fff;  
}  
/*右侧栏list的item*/  
.nav_right .nav_right_items{  
  /*浮动向左*/  
  float: left;  
  /*每个item设置宽度是33.33%*/  
  width: 33.33%;  
  height: 80px;  
  text-align: center;  
}  
.nav_right .nav_right_items image{  
  /*被图片设置宽高*/  
  width: 50px;  
  height: 30px;  
}  
.nav_right .nav_right_items text{  
  /*给text设成块级元素*/  
  display: block;  
  margin-top: 5px;  
  font-size: 10px;  
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
}  