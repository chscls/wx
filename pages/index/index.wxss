/**index.wxss**/
@import "../../libs/icon/icon.wxss";

.container{
    padding:0;
    margin:0;
}
.swiper {
  height: 600rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #fff;
 
}



.weui-icon-search_in-box {
  color:black;
  position: absolute;
   font-size: 20px;
  font-weight:bold;
  left: 10px;
  top: 5px;
}
.weui-icon-search_in-box-right {
   color:black;
  position: absolute;
  font-weight:bold;
  font-size: 20px;
  right: 10px;
  top: 5px;
}


.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  height: 30px;
  background: #f5f5f5;
 
}

.weui-search-bar__box {
  position: relative;
  padding-left: 40px;
  padding-right: 40px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}

.weui-search-bar__input {
  color:#aaa;
  padding-left: 10px;
  padding-right: 10px;
  height: 30px;
  
  display: block;
  line-height: 30px;
  font-size: 13px;

}

.menus {
  box-shadow:6rpx 6rpx 6rpx 6rpx #f5f5f5;
  width: 100%;
  background-color: white;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  margin-top:10px;
}
.menu {
   flex: 1;

  margin: 5px 2px;
}
.menu-u-1of3{
  display: flex;
  flex: 0 0 27%;
  height: 50px;
  
  font-size: 13px;
}
.name{
  width: 80px;
  text-align: center;
}
.ename{
   width: 80px;
  font-size: 12px;
  text-align: center;
  color:#aaa
}
.menu-u-1of2{
  display: flex;
  flex: 0 0 5%;
  height:50px;
  font-size: 30px;
  line-height: 30px;
  color: #f5f5f5;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

