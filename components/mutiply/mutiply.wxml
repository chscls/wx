<!--components/Single.wxml-->
<wxs src="../../utils/util.wxs" module="util" />
<checkbox-group bindchange="checkboxChange">
  <label class="checkbox" wx:for="{{question.items}}" wx:key="{{question.id}}">
    <view><checkbox value="{{index}}" checked="{{util.contain(answer,index) }}"/>{{util.numberToChar(index) }}.
    
    <text wx:if="{{!item.isRich}}">{{item.content}}</text>
<rich-text wx:else nodes="{{item.content}}" ></rich-text>
    
    
    
    </view>
  </label>
</checkbox-group>

